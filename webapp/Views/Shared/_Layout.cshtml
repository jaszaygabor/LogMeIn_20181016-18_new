@using webapp.Helpers;

<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="icon" type="image/png" href="~/Content/images/logo1.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/css/styles.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/css/logon.css" type="text/css" />
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0" />
    <style>
        a:hover {
            text-decoration: none;
        }

        a:active {
            text-decoration: none;
        }
    </style>
</head>
<body>
        <div class="navbar">
            <a href="index.html" title="Kijelentkezés"><i class="fa icon">&#xf08b;</i></a>
            <a href="javascript:void(0)" title="Kérdés"><i class="fa icon" onclick="document.getElementById('id01').style.display='block'">&#xf059;</i></a>
        </div>
        <div id="container">
            <header>
                <div class="width">
                    <h1><a href="~/Home/logon">GIT</a></h1>

                    <nav>

                        <ul>

                            <li class="start @Html.IsActive("Home", "html_css_js")">
                                @Html.ActionLink("HTML+CSS+JS", "html_css_js", "Home")
                            </li>

                            <li class="start @Html.IsActive("Home", "programozas")">
                                @Html.ActionLink("C#", "programozas", "Home")
                            </li>

                            <li class="start @Html.IsActive("Home", "linux")">
                                @Html.ActionLink("Linux", "linux", "Home")
                            </li>

                            <li class="start @Html.IsActive("Home", "iszgy")">
                                @Html.ActionLink("Iszgy", "iszgy", "Home")
                            </li>

                            <li class="start @Html.IsActive("Home", "halozat")">
                                @Html.ActionLink("Hálózat", "halozat", "Home")
                            </li>
                        </ul>

                    </nav>

                </div>
            </header>
            @RenderBody()
        </div>
        <script>
            var modal = document.getElementById('id01');

            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        </script>
        <footer style="bottom:0; width:100%; position:absolute;">
            <p><img src="~/Content/images/logo.png"></p>
            <p class="footer-text">Minden jog fenntartva!</p>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
